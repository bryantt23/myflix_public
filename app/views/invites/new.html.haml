%section.invite.container
  .row
    .span10.offset1
      = form_for @invite, class: 'invite' do |f|
        %header
          %h1 Invite a friend to join MyFlix!
        %fieldset
          = f.label :invitee_name, "Friend's Name"
          = f.text_field :invitee_name
          = f.label :invitee_email, "Friend's Email Address"
          = f.email_field :invitee_email
          = f.label :message, "Invitation Message"
          = f.text_area :message, class: 'span4', rows: 6, placeholder: "Join this awesome site"
        %fieldset.action
          %input(type="submit" value="Send Invitation" class="btn")
