%section.register.container
  .row
    .span10.offset1
      %form.form-horizontal
      = errors_form_for @user, class: "form-horizontal" do |f|
        %header
          %h1 Register
        %fieldset
          .control-group
            = f.label :email, "Email"
            = f.email_field :email
            = f.label :password, "Password"
            = f.password_field :password
            = f.label :full_name, "Full Name"
            = f.text_field :full_name
            = hidden_field_tag :invite_token, @invite_token
        %fieldset.credit_card
          .control-group
            %label.control-label Credit Card Number
            .controls
              %input.span3(type="text")
          .control-group
            %label.control-label Security Code
            .controls
              %input.span3(type="text")
          .control-group
            %label.control-label Expiration
            .controls
              = select_month(Date.today, {add_month_numbers: true},  class: 'span2')
              = select_year(Date.today.year, {start_year: Date.today.year, end_year: Date.today.year + 4}, class: 'span1')
        %fieldset.actions.control-group
          .controls
            %input(type="submit" value="Sign Up" class="btn")
